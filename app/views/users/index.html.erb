<div class="container">
  <h1>Re Former</h1>
  <table class="table">
    <tr>
      <th>#</th>
      <th>Username</th>
      <th>Email</th>
      <th>Actions</th>
    </tr>

    <% @users.each_with_index do |user,index| %>
      <tr>
        <td>
          <%= index+1 %>
        </td>
        <td>
          <%= user.username %>
        </td>
        <td>
          <%= user.email %>
        </td>
        <td>
          <a href="<%= edit_user_path(user) %>" class="btn btn-info">Edit</a>
          <%# <a href="<%= link_to" class="btn btn-danger"></a> %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
